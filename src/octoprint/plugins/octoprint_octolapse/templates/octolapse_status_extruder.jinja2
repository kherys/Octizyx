<script type="text/html" id="extruder-status-template">
  <div class="panel panel-default">
    <div class="panel-heading ol-heading">
      <div class="row-fluid">
        <div class="span12">
          <h4>Extruder State</h4>
        </div>
      </div>

    </div>
    <div class="panel-body">
      <div class="row-fluid text-center">

        <div class="span4 octolapse-container">
          <div class="margin-small">
            <div>
              Retraction
            </div>
            <div>
              <span class="fa-stack fa-2x" data-bind="attr: {title: ExtruderState.getRetractionStateText}">
                <span class="fa fa-square fa-stack-2x"></span>
                <span class="fa fa-1x fa-stack-1x extruder-icon" data-bind="css:ExtruderState.getRetractionStateIconClass"></span>
              </span>
            </div>
            <div class="ol-text-status-1">
              <span data-bind="text:ExtruderState.getRetractionStateText"></span>&nbsp;
            </div>
          </div>
        </div>
        <div class="span4 octolapse-container">
          <div class="margin-small">
            <div>
              Detraction
            </div>
            <div>
              <span class="fa-stack fa-2x" data-bind="attr: {title: ExtruderState.getDetractionStateText}">
                <span class="fa fa-square fa-stack-2x"></span>
                <span class="fa fa-1x fa-stack-1x extruder-icon icon-fade-in" data-bind="css:ExtruderState.getDetractionIconClass"></span>
              </span>
            </div>
            <div class="ol-text-status-1">
              <span data-bind="text:ExtruderState.getDetractionStateText"></span>&nbsp;
            </div>
          </div>
        </div>
        <div class="span4 octolapse-container">
          <div class="margin-small">
            <div>
              Extrusion
            </div>

            <div>
              <span class="fa-stack fa-2x" data-bind="attr: {title: ExtruderState.getExtrudingStateText}">
                <span class="fa fa-square fa-stack-2x"></span>
                <span class="fa fa-1x fa-stack-1x extruder-icon" data-bind="css:ExtruderState.getExtrudingStateIconClass"></span>
              </span>
            </div>
            <div class="ol-text-status-1">
              <span data-bind="text:ExtruderState.getExtrudingStateText"></span>  &nbsp;
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="panel-footer ol-info-footer">
      <div class="row-fluid">
        <div class="span12">
          Filament Extruded:&nbsp;<span data-bind="text : ExtruderState.ExtrusionLengthTotal"></span>&nbsp;<i>mm</i>
        </div>
      </div>

    </div>
  </div>
</script>
